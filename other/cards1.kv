<Menu>:
  Widget:
    canvas:
      Rectangle:
        source: "../images/cover.png"
        size: root.size
        pos: root.pos
      # Rectangle:
      #   size: root.width * 0.5, root.height * 0.75
      #   pos: root.width / 2 - self.width / 4, root.height / 6

    Button:
      padding: ('10dp', '5dp', '10dp', '5dp')
      pos: root.width / 2 - self.width / 2, root.height * 0.9
      size: self.texture_size
      text: "НАЧАТЬ ТРЕНИРОВКУ"
      font_size: 20
      bold: "true"
      background_color: app.main_color
      background_normal: ""
      on_press: root.manager.current = "main"

<MainWidget>:
  Widget:
    canvas.before:

      # Color:
      #   rgba: 1, 1, 1, 1
      Rectangle:
        source: "../images/cover.png"
        size: root.size
        pos: root.pos
      Color:
        rgba: app.main_color
      Rectangle:
        pos: 0 + (root.width - root.width * 0.96), 0 + (root.height - root.height * 0.96)
        size: root.width * 0.92, root.height * 0.92
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: 0 + (root.width - root.width * 0.90), 0 + (root.height - root.height * 0.92)
        size: root.width * 0.80, root.height * 0.84
    Button:
      padding: ('10dp', '5dp', '10dp', '5dp')
      pos: root.width / 2 - self.width / 2, root.height * 0.9
      size: self.texture_size
      text: "ВЕРНУТЬСЯ В МЕНЮ"
      font_size: 20
      bold: "true"
      background_color: app.main_color
      background_normal: ""
      on_press: root.manager.current = "menu"
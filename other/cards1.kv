<MenuButton@Button>:
  padding: ('10dp', '5dp', '10dp', '5dp')
  size: self.texture_size
  font_size: 20
  bold: "true"
  color: app.main_color
  background_color: 1, 1, 1, 0
  # background_color: app.main_color
  background_normal: ""

<Menu>:
  Widget:
    canvas:
      Rectangle:
        size: root.size
        pos: root.pos
    Image:
      source: "../images/cover.png"
      allow_stretch: True
      keep_ratio: False
      size: root.size
      pos: root.pos
    MenuButton:
      text: "НАЧАТЬ ТРЕНИРОВКУ"
      color: 1, 1, 1, 1
      pos: root.width / 2 - self.width / 2, root.height - self.height
      on_press: root.manager.current = "main"

<MainWidget>:
  Widget:
    box_level: box_level.__self__
    # but_open: but_open.__self__
    # picture: picture.__self__
    id: main_widget
    canvas.before:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        size: root.size
      #   pos: root.pos
      # Color:
      #   rgba: app.main_color
      # Rectangle:
      #   pos: 0 + (root.width - root.width * 0.96), 0 + (root.height - root.height * 0.96)
      #   size: root.width * 0.92, root.height * 0.92
      # Color:
      #   rgba: 1, 1, 1, 1
      # Rectangle:
      #   pos: 0 + (root.width - root.width * 0.90), 0 + (root.height - root.height * 0.92)
      #   size: root.width * 0.80, root.height * 0.84
    MenuButton:
      id: back_menu
      text: "ВЕРНУТЬСЯ В МЕНЮ"
      pos: root.width / 2 - self.width / 2, root.height - self.height
      on_press: root.manager.current = "menu"
    

    Label:
      id: lab1
      font_size: root.height * 0.15
      text: root.letter_a
      bold: "true"
      color: 0, 0, 1, 1
      pos: root.width / 2 - self.width, root.height / 2 + self.height


    Label:
      id: lab2
      font_size: root.height * 0.15
      text: root.letter_b
      bold: "true"
      color: 0, 1, 0, 1
      pos: root.width / 2, root.height / 2 + self.height


    Label:
      id: lab3
      markup: True 
      font_size: root.height * 0.15
      text: root.word
      bold: "true"
      color: app.main_color
      pos: root.width / 2 - self.width / 2, root.height / 2 + self.height
    
    Label:
      id: lab4
      text: "20 0 0"
      font_size: 20
      color: app.main_color
      bold: "true"
      padding: ('10dp', '5dp', '10dp', '10dp')
      pos: root.width / 2 - self.width /2, root.height - self.height - root.ids.back_menu.height
      size: self.texture_size
      # canvas.before:
      #   Color:
      #     rgba: app.main_color
      #   Rectangle:
      #     pos: self.pos
      #     size: self.size
    
    Image:
      id: picture
      source: root.picture_link
      pos: root.width / 2 - self.width / 2, root.height / 2 - self.height * .75
      size: '200dp','200dp'

    MenuButton:
      id: but_open
      text: "ОТКРЫТЬ"
      pos: root.width / 2 - self.width / 2, 0
      on_press: root.open_card()
    
    BoxLayout:
      id: box_level
      # level: level.__self__
      # spacing: '8dp'
      size: root.width * 0.8, root.height * 0.05
      pos: root.width / 2 - self.width / 2, root.height - root.height * 0.9

      Button:
        text: "СНОВА"
        font_size: 35
        bold: "true"
        color: 23/255, 185/255, 223/255, 1
        background_color: 1, 1, 1, 1
        size_hint: .25,1
        background_normal: ""
        on_press: root.rating_word(self.text)
      Button:
        text: "ЛЕГКО"
        font_size: 35
        bold: "true"
        color: 69/255, 179/255, 113/255, 1
        background_color: 1, 1, 1, 1
        size_hint: .25,1
        background_normal: ""
        on_press: root.rating_word(self.text)

      Button:
        text: "ХОРОШО"
        font_size: 35
        bold: "true"
        color: 1, 165/255, 0, 1
        background_color: 1, 1, 1, 1
        size_hint: .3,1
        background_normal: ""
        on_press: root.rating_word(self.text)

      Button:
        text: "СЛОЖНО"
        font_size: 35
        bold: "true"
        color: 235/255, 99/255, 71/255, 1
        background_color: 1, 1, 1, 1
        size_hint: .3,1
        background_normal: ""
        on_press: root.rating_word(self.text)
